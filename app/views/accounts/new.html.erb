<div class="col-md-6 col-md-offset-3 panel panel-default">
	<div class="panel-body">
		<h2>Create an Account</h2>

		<%= simple_form_for @account do |f| %>
			<%= f.fields_for :owner do |o| %>
				<%= o.input :name, class: "form-control", required: true, label: "Your Name" %>
				<%= o.input :email, class: "form-control", require: true, label: "Email" %>
				<%= o.input :password, class: "form-control", required: true, label: "Password" %>
				<%= o.input :password_confirmation, class: "form-control", required: true, label: "Password Confirmation" %>
			<% end %>
			<%= f.label :subdomain %>
			<div class="input-group">
				<%= f.input :subdomain, class: 'form-control', label: false %>
				<span class="input-group-addon" id="basic-addon2">.simplecrm.com.br</span>
			</div>
			<br>
			<%= f.submit %>
		<% end %>
	</div>
</div>


